[Unit]
Description=Movie Watchlist Emailer Job
After=network.target

[Service]
Type=oneshot
ExecStart=/usr/bin/php /home/[USER]/Cinemaniacs/dmz/movie_watchlist_emailer.php
User=[USER]
StandardOutput=append:/var/log/movie_watchlist_emailer.log
StandardError=append:/var/log/movie_watchlist_emailer.log

[Install]
WantedBy=multi-user.target
